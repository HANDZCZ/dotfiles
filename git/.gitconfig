[user]
	name = HANDZCZ
	email = handz@email.cz
[credential]
	helper = store
[gpg]
    format = ssh
[commit]
    gpgsign = true
[core]
	autocrlf = false
[user]
    signingkey = ~/.ssh/git/id_ed25519_signing_key
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed-signers


#[includeIf "hasconfig:remote.*.url:git@github.com:*/**"]
