[includeIf "hasconfig:remote.*.url:https://gitlab.com/**"]
    path = ~/.config/git/.gitconfig.gitlab
[includeIf "hasconfig:remote.*.url:git@gitlab.com:*/**"]
    path = ~/.config/git/.gitconfig.gitlab


[includeIf "hasconfig:remote.*.url:https://git.handz.eu.org/**"]
    path = ~/.config/git/.gitconfig.git.handz.eu.org
[includeIf "hasconfig:remote.*.url:ssh://git@git-ssh.handz.eu.org:222/**"]
    path = ~/.config/git/.gitconfig.git.handz.eu.org


[includeIf "hasconfig:remote.*.url:git@ssh.suyu.dev:*/**"]
    path = ~/.config/git/.gitconfig.git.suyu.dev
